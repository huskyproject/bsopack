# Generic Makefile for bsopack

CC      = gcc
RM	= cmd /c del

CFLAGS  = -I../.. -c -O3 $(DEBUG)
LFLAGS  = -Zcrtdll

OSTYPE=OS2
UNAME=OS/2

CDEFS=-D$(OSTYPE) -DUNAME="$(UNAME)"
LIBS=../../fidoconf/fconfemx.a ../../smapi/smapiemx.a
SRC_DIR=..\SRC\

OBJS= log.o config.o bsoutil.o bsopack.o

all: bsopack

$(OBJS): $(SRC_DIR)\*.c
		$(CC) $(CFLAGS) $(CDEFS) $(SRC_DIR)\$*.c

bsopack: $(OBJS)
	 $(CC) $(LFLAGS) log.o config.o bsoutil.o bsopack.o $(LIBS) -o bsopack.exe


.IGNORE

clean:
		$(RM) *.o

distclean: clean
		$(RM) bsopack.exe

