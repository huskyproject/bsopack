# Makefile for MSVC (Win32)

CC  = cl
RM	= del

CFLAGS=-nologo -Zp1 -O2 -I..\.. -I..\h
COPT=   -O2
UNAME=w32
CDEFS=-D__NT__ -DUNAME=\"$(UNAME)\" -DNT -DWINNT -D_CONSOLE
SRC_DIR=..\SRC
LIBS=..\..\fidoconf\fconfmvc.lib ..\..\smapi\smapimvc.lib

all: bsopack.exe

bsopack.exe: 
		$(CC) $(CFLAGS) $(CDEFS) $(COPT) -Fe$@ $(SRC_DIR)\bsopack.c \
                                               $(SRC_DIR)\log.c     \
                                               $(SRC_DIR)\config.c  \
                                               $(SRC_DIR)\bsoutil.c \
                                               $(LIBS)

clean:
		$(RM) *.obj

distclean: clean
		$(RM) bsopack.exe
        
